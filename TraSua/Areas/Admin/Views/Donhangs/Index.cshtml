@model IEnumerable<Trasua.Models.Donhang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}






<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-sm-4">
                                <div class="search-box mr-2 mb-2 d-inline-block">
                                    <div class="position-relative">
                                        <input type="text" class="form-control" placeholder="Search...">
                                        <i class="bx bx-search-alt search-icon"></i>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-centered table-nowrap">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Họ Tên</th>
                                        <th>Ngày Mua</th>
                                        <th>Trạng Thái</th>
                                        <th>Phương Thức Thanh Toán</th>
                                        <th>Địa Chỉ</th>
                                        <th> Hành động</th>
                                    </tr>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nguoidung.Hoten)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Ngaydat)
                                            </td>
                                            <td>
                                                @{ if (@item.Tinhtrang == 0)
                                                    {
                                                        <a style="color:red">Đang chờ xác nhận. </a> }
                                                    else if (@item.Tinhtrang == 1)
                                                    {
                                                        <a style="color:green">Đã xác nhận  </a> }
                                                    else
                                                    {
                                                        <a style="color:orangered">Đang chờ xác nhận </a> } }
                                            </td>
                                            <td>
                                                @{ if (@item.Thanhtoan == 1)
                                                    {
                                                        <div style="color:red">Thanh toán tiền mặt</div> }
                                                    else if (@item.Thanhtoan == 2)
                                                    {
                                                        <div style="color:brown">Thanh toán chuyển khoản</div> } }
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Diachinhanhang)
                                            </td>
                                           
                                             <td>  
                                                <a href="javascript:void(0);" class="mr-3 text-primary" data-toggle="tooltip" data-placement="top" title="Xem Chi Tiết" onclick="window.location.href='@Url.Action("Details", new { id = item.Madon })';" data-toggle="modal" data-target=".exampleModal">
                                                    <i class="bx bxs-show font-size-18"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        @*<ul class="pagination pagination-rounded justify-content-end mb-2">
                            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                                <a class="page-link" href="@(Model.PageNumber == 1 ? "javascript:void(0);" : Url.Action("Index", new { page = Model.PageNumber - 1 }))" aria-label="Previous">
                                    <i class="mdi mdi-chevron-left"></i>
                                </a>
                            </li>

                            @for (int i = 1; i <= Model.PageCount; i++)
                            {
                                <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                                    <a class="page-link" href="@(Model.PageNumber == i ? "javascript:void(0);" : Url.Action("Index", new { page = i }))">@i</a>
                                </li>
                            }

                            <li class="page-item @(Model.PageNumber == Model.PageCount ? "disabled" : "")">
                                <a class="page-link" href="@(Model.PageNumber == Model.PageCount ? "javascript:void(0);" : Url.Action("Index", new { page = Model.PageNumber + 1 }))" aria-label="Next">
                                    <i class="mdi mdi-chevron-right"></i>
                                </a>
                            </li>
                        </ul>*@

                    </div>
                </div>

            </div>
        </div>
        <!-- end row -->
    </div> <!-- container-fluid -->
</div>