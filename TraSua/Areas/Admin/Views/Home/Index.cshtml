@model PagedList.IPagedList<Trasua.Models.Sanpham>

@using PagedList.Mvc;


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-sm-4">
                                <div class="search-box mr-2 mb-2 d-inline-block">
                                    <div class="position-relative">
                                        <input type="text" class="form-control" placeholder="Search...">
                                        <i class="bx bx-search-alt search-icon"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <div class="text-sm-right">
                                    <button type="button" class="btn btn-success btn-rounded waves-effect waves-light mb-2 mr-2" onclick="window.location.href='@Url.Action("Create")'">
                                        <i class="mdi mdi-plus mr-1"></i> Thêm Sản Phẩm Mới
                                    </button>

                                </div>
                            </div><!-- end col-->
                        </div>

                        <div class="table-responsive">
                            <table class="table table-centered table-nowrap">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Tên sản phẩm</th>
                                        <th>Giá tiền</th>
                                        <th>Số Lượng</th>
                                        <th>Ngày Thêm</th>
                                        <th>Mô tả</th>
                                        <th>Size</th>
                                        <th>Ảnh bìa</th>
                                        <th>Danh Mục</th>
                                        <th>Hành động</th>
                                    </tr>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Tensp)
                                            </td>
                                            <td>@String.Format("{0:0,0}", item.Giatien) VNĐ</td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Soluong)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Ngaythem)
                                            </td>
                                            <td>@Html.DisplayFor(modelItem => item.Mota)</td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Size)
                                            </td>
                                            <td>
                                                <img src="@Url.Content("~" +item.Anhbia)" width="50" height="50" />
                                                @*@Html.DisplayFor(modelItem => item.Anhbia)*@
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Danhmuc.Tendanhmuc)
                                            </td>
                                            <td>
                                                <a href="javascript:void(0);" class="mr-3 text-primary" data-toggle="tooltip" data-placement="top" title="Xem Chi Tiết" onclick="window.location.href='@Url.Action("Details", new { id = item.Masp })';" data-toggle="modal" data-target=".exampleModal">
                                                    <i class="bx bxs-show font-size-18"></i>
                                                </a>

                                                <a href="javascript:void(0);" class="mr-3 text-primary" data-toggle="tooltip" data-placement="top" title="Sửa" onclick="window.location.href='@Url.Action("Edit", new { id = item.Masp })'">
                                                    <i class="mdi mdi-pencil font-size-18"></i>
                                                </a>

                                                <a href="javascript:void(0);" class="text-danger" data-toggle="tooltip" data-placement="top" title="Xoá" onclick="if(confirm('Bạn có chắc muốn xóa?')) { window.location.href='@Url.Action("Delete", new { id = item.Masp })'; }">
                                                    <i class="mdi mdi-close font-size-18"></i>
                                                </a>

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <ul class="pagination pagination-rounded justify-content-end mb-2">
                            <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                                <a class="page-link" href="@(Model.PageNumber == 1 ? "javascript:void(0);" : Url.Action("Index", new { page = Model.PageNumber - 1 }))" aria-label="Previous">
                                    <i class="mdi mdi-chevron-left"></i>
                                </a>
                            </li>

                            @for (int i = 1; i <= Model.PageCount; i++)
                            {
                                <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                                    <a class="page-link" href="@(Model.PageNumber == i ? "javascript:void(0);" : Url.Action("Index", new { page = i }))">@i</a>
                                </li>
                            }

                            <li class="page-item @(Model.PageNumber == Model.PageCount ? "disabled" : "")">
                                <a class="page-link" href="@(Model.PageNumber == Model.PageCount ? "javascript:void(0);" : Url.Action("Index", new { page = Model.PageNumber + 1 }))" aria-label="Next">
                                    <i class="mdi mdi-chevron-right"></i>
                                </a>
                            </li>
                        </ul>

                    </div>
                </div>

            </div>
        </div>
        <!-- end row -->
    </div> <!-- container-fluid -->
</div>
<style>
    th {
        text-align: center;
    }
    td{
        text-align:center;
    }
</style>