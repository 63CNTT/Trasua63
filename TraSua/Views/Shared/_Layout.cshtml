                        <li>
                            <a href="@Url.Action("DanhmucPartial", "Danhmuc", new { id = itemCate.Madanhmuc, page = 1 })"style="text-decoration: none; text-transform: uppercase;">@itemCate.Tendanhmuc</a>
                        </li>*@

                    }
                }
                <li class="nav-item">
